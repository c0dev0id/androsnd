<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Volume -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_app_volume"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                app:labelBehavior="gone" />

            <TextView
                android:id="@+id/label_volume"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAppearance="?attr/textAppearanceBodyLarge" />
        </LinearLayout>

        <!-- Overlay Opacity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_overlay_opacity"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_opacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="0"
                android:valueTo="100"
                android:stepSize="1"
                app:labelBehavior="gone" />

            <TextView
                android:id="@+id/label_opacity"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAppearance="?attr/textAppearanceBodyLarge" />
        </LinearLayout>

        <!-- Overlay Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_overlay_size"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_overlay_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="0.5"
                android:valueTo="3.0"
                android:stepSize="0.1"
                app:labelBehavior="gone" />

            <TextView
                android:id="@+id/label_overlay_size"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAppearance="?attr/textAppearanceBodyLarge" />
        </LinearLayout>

        <!-- Double-Tap Timeout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_double_tap"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_double_tap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:valueFrom="300"
                android:valueTo="2000"
                android:stepSize="50"
                app:labelBehavior="gone" />

            <TextView
                android:id="@+id/label_double_tap"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAppearance="?attr/textAppearanceBodyLarge" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
